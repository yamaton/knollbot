{
    "compilerOptions": {
        "outDir": "./built",
        "target": "ES2015",
        // ---------------------------
        // https://webpack.js.org/guides/typescript/
        "sourceMap": true,
        // --------------------------
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
    ]
}